//se necesita node.js para compilar un archivo stylus http://learnboost.github.io/stylus/
// para compilar es $- stylus -c archivo.styl y para compilarlo en cada cambio es 
//stylus -c -w archivo.styl 
leonidas = #E8E8E8
grisoscuro =#444
azul=#22BCE0
naranja= #DD4F24
gris_texto= #7A7A7A
body 
	background leonidas
	color  grisoscuro
	font-style Arial
	font-size 16px
header 
	background grisoscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white 
	overflow hidden 
	padding 1em 
	position relative 
	//si coloco un objeto con pocicion relative y dentro tiene otro objeto con posicion absoluta el segundo objeto toma de referencia el objeto de posicion relativa
	z-index 1
	.logo 
		border-right 1px solid azul
		width 60px
		position absolute
		top 10px
		img 
			width 52px

	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-weight bold 
			font-size 14px
			font-style italic
			text-decoration none
		.publicar
			background naranja
			color white
			font-size italic
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			//text-shadow ocuade parametros cuanto se mueve la sombra en Y,X y cual es la difuminacion Z  y B el color de la sombra textshadow y x z b
		.titulo
			font-size 18px
			font-weight normal
			padding 0 
			margin 0
	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1em 0 0 
			position relative
			 z-index 2 // z-index es un atributo que permite mover objetos hacia adelante o atras a mayor numero mas adelante
			// z-index exije que la posiscion no esea estatica 				 
			img 
				width 50px
				border-radius 50%
		.flechita 
			background naranja
			color white
			display block
			padding 0.2em 0.2em
			position absolute
			top 15px
			right 0
			text-align right
			width 50%
nav
	background azul
	border-left 15px solid white
	position relative
	&:before // el & esta indicando al objeto nav el : es para "atributos"
		border-bottom 20px solid transparent 
		border-left 7px solid white	
		border-top 20px solid transparent
		content ""// este hay q ponerlo de ahuevo para que el after o before funcionen
		left 0
		position absolute
		top 0
		
	.menu //los ojetos bloquesTexto siempre tienen un margen por defecto
		height 50px
		line-height 40px
		margin 0
		padding 0 // las ul tienen un padign por defecto a ala izquierda
		overflow-x auto
		white-space nowrap
		li 
			display inline-block
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0
				text-decoration none
.posts 
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		margin-bottom 1em 
.left 
	float left 
.right 
	float right		
footer
	background red
	.powered
		font-size 18px
